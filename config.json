{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "output/",
      "files": [{
        "destination": "tokens.scss",
        "format": "custom/scss/variables",
        "filter": "notBase"
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "output/",
      "files": [{
        "destination": "vars.css",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        }
      }]
    }
  }
}